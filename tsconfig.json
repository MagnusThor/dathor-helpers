{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
 
    "lib": ["ES2020","dom"],
    "typeRoots": [
    "./node_modules/@webgpu/types",
    "./node_modules/@types"
    ],
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
